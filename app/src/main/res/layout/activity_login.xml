<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@mipmap/bg_app"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GoGoTalk少儿英语"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_marginTop="27dp"
        android:layout_width="337dp"
        android:background="@mipmap/bg_login_input_boder"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_height="41dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_login_input_phone"/>
        <TextView
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            />
        <EditText
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_width="0dp"
            android:text=""
            android:inputType="phone"
            android:hint="请输入手机号"
            android:id="@+id/et_login_phone"
            android:textColorHint="#ffb7a6ed"
            android:maxLength="11"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginLeft="14dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="337dp"
        android:background="@mipmap/bg_login_input_boder"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_height="41dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_login_input_password"/>
        <TextView
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密     码"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/et_login_password"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_width="0dp"
            android:text=""
            android:inputType="textPassword"
            android:layout_weight="1"
            android:textColorHint="#ffb7a6ed"
            android:layout_marginLeft="14dp"
            android:hint="请输入密码"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:layout_height="match_parent" />
    </LinearLayout>
