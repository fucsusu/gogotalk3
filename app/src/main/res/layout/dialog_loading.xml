<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_loading_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#e0000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/qb_px_150"
        android:layout_height="@dimen/qb_px_110"
        android:background="#e0000000"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/qb_px_10"
        android:paddingLeft="@dimen/qb_px_21"
        android:paddingRight="@dimen/qb_px_21"
        android:paddingTop="@dimen/qb_px_10">

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="@dimen/qb_px_35"
            android:layout_height="@dimen/qb_px_35"
            android:layout_gravity="center_horizontal"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/dialog_loading"
             />

        <TextView
            android:id="@+id/tipTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_15"
            android:text="加载中..."
            android:textColor="#f0f0f0"
            android:textSize="@dimen/qb_px_15" />
    </LinearLayout>

</LinearLayout>