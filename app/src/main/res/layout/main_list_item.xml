<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_mImg_BJ"
    android:layout_width="139dp"
    android:layout_height="200dp"
    android:background="@mipmap/bg_main_class_list_item_empty">


    <com.gogotalk.system.view.widget.RoundedImageView
        android:id="@+id/id_mImg_XX"
        android:layout_width="130dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4.3dp"
        android:layout_marginTop="38dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_main_user_info_header_default"
        roundiv:corner_radius="9dp"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="35dp"
        android:src="@mipmap/ic_main_oder_class" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_mImg_XX"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <TextView
            android:id="@+id/id_mTitleName_HomeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The first lesson"
            android:textColor="#333"
            android:singleLine="true"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_mTest_HomeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="第一课"
            android:textColor="#666"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/id_mPreview_BtnItem"
                android:layout_width="56dp"
                android:layout_height="23dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/bg_main_list_item_btn_yuxi"
                android:gravity="center"
                android:text="课程预览"
                android:textColor="#fefefe"
                android:textSize="9sp" />

            <Button
                android:id="@+id/id_mEnterClassroom_BtnItem"
                android:layout_width="56dp"
                android:layout_height="23dp"
                android:background="@mipmap/bg_main_list_item_btn_go_room"
                android:gravity="center"
                android:text="进入教室"
                android:textColor="#fefefe"
                android:textSize="9sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_mTime_HomeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="上课时间 周一 19:00 - 19:40"
            android:textColor="#ab76c1"
            android:textSize="8sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_mTime1_HomeItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/id_mImg_XX"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/shap_bg_main_list_item_btn_cancel"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:text="取消约课"
        android:textColor="#fff"
        android:textSize="10sp"
        android:visibility="visible" />
</RelativeLayout>
