<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/qb_px_420"
        android:layout_height="@dimen/qb_px_220"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@mipmap/bg_dialog_coursware_load">

        <TextView
            android:id="@+id/courseware_title_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_35"
            android:layout_marginRight="@dimen/qb_px_50"
            android:text="@string/courseware_load_txt1"
            android:textColor="@color/popup_courseware_title"
            android:textSize="@dimen/qb_px_22"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/courseware_load_txt_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseware_title_popup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_15"
            android:text="@string/connect_load_txt"
            android:textColor="@color/popup_courseware_title" />

        <ProgressBar
            android:id="@+id/courseware_load_progress_popup"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/qb_px_330"
            android:layout_height="@dimen/qb_px_35"
            android:layout_below="@id/courseware_load_txt_popup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_15"
            android:progressDrawable="@drawable/list_coursware_load_progress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseware_load_progress_popup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_20"
            android:text="@string/courseware_load_txt2"
            android:textColor="@color/popup_courseware_title2"
            android:textSize="@dimen/qb_px_15" />
    </RelativeLayout>


</RelativeLayout>