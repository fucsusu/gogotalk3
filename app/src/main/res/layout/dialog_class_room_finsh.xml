<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_mLayout_ZHIBO"
    android:layout_width="300dp"
    android:layout_height="170dp"
    android:background="@drawable/shap_record"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_mTitleMsg_ZHIBO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:text="课程还在进行中，最好不要离开哦！"
        android:textColor="#666"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_mTC_ZHIBO"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@mipmap/anniu_class_room_finsh_yes"
            android:gravity="center"
            android:text="退出"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/id_mQx_ZHIBO"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@mipmap/anniu_class_room_finsh_no"
            android:gravity="center"
            android:text="取消"
            android:textColor="#666"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
