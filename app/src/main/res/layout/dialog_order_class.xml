<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_mLayout_YY"
    android:layout_width="480dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dot_yuyuetanchuang"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="480dp"
        android:layout_height="22dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center|bottom"
            android:text="预约课程"
            android:textColor="#333"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:id="@+id/id_mGuanbi_Make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_btn_common_close" />
        </LinearLayout>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_mRecycler_Make"
        android:layout_width="440dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/shap_bg_main_recycler"></androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_dialog_order_class_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:text="每节课25分钟"
            android:textColor="#999"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_mL1"
        android:layout_width="450dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_mTest2_Make"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/bg_dialog_order_class_left_tag"
            android:gravity="center"
            android:textColor="#999"
            android:textSize="11sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_mR1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_mL2"
        android:layout_width="450dp"
        android:layout_height="45dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_mTest_Make"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/bg_dialog_order_class_left_tag"
            android:gravity="center"
            android:textColor="#999"
            android:textSize="11sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_mR2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_mL3"
        android:layout_width="450dp"
        android:layout_height="45dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_mTest1_Make"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/bg_dialog_order_class_left_tag"
            android:gravity="center"
            android:textColor="#999"
            android:textSize="12sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_mR3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <Button
        android:id="@+id/id_mYy_Make"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/bg_main_list_item_btn_go_room"
        android:gravity="center"
        android:text="确定预约"
        android:textColor="#fff"
        android:textSize="14sp" />

</LinearLayout>
