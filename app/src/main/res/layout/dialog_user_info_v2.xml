<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_dialog_check_device"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/qb_px_380"
        android:layout_height="@dimen/qb_px_310"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="@dimen/qb_px_20"
            android:layout_height="@dimen/qb_px_20"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/qb_px_17"
            android:layout_marginRight="@dimen/qb_px_17"
            android:src="@mipmap/ic_btn_common_close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/qb_px_47"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_man"
                    android:layout_width="@dimen/qb_px_58"
                    android:layout_height="@dimen/qb_px_68"
                    android:button="@null"
                    android:checked="true"
                    android:background="@drawable/selector_sex_man"
                    android:gravity="center" />

                <RadioButton
                    android:id="@+id/rb_women"
                    android:layout_width="@dimen/qb_px_58"
                    android:layout_height="@dimen/qb_px_68"
                    android:layout_marginLeft="@dimen/qb_px_34"
                    android:button="@null"
                    android:background="@drawable/selector_sex_women"
                    android:gravity="center" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/layout_select_name"
                android:layout_width="@dimen/qb_px_220"
                android:layout_height="@dimen/qb_px_31"
                android:layout_below="@+id/rg_sex"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/qb_px_25"
                android:background="@mipmap/bg_user_info_input"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_13"
                    android:text="英文名"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/qb_px_10" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/qb_px_12"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="#ff333333"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/qb_px_10" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:layout_marginRight="@dimen/qb_px_6"
                    android:src="@mipmap/btn_user_info_right" />
            </LinearLayout>

            <!--<Button-->
            <!--android:id="@+id/btn_save"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:background="@mipmap/btn_user_info_update"-->
            <!--android:stateListAnimator="@null"-->
            <!--android:text="保存信息"-->
            <!--android:visibility="gone"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textSize="11sp" />-->
            <LinearLayout
                android:id="@+id/btn_save"
                android:layout_width="@dimen/qb_px_76"
                android:layout_height="@dimen/qb_px_36"
                android:layout_marginTop="@dimen/qb_px_20"
                android:background="@mipmap/btn_user_info_update"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:text="保存信息"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/qb_px_11" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>