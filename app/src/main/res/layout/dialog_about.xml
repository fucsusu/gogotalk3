<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <FrameLayout
        android:layout_width="@dimen/qb_px_304"
        android:layout_height="@dimen/qb_px_174"
        android:background="@mipmap/bg_dialog_about_us"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="@dimen/qb_px_20"
        android:layout_height="@dimen/qb_px_20"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/qb_px_17"
        android:layout_marginRight="@dimen/qb_px_17"
        android:src="@mipmap/ic_btn_common_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/qb_px_57"
            android:layout_height="57dp"
            android:layout_marginTop="@dimen/qb_px_33"
            android:src="@mipmap/ic_dialog_about_us_header" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="GogoTalk少儿英语"
            android:textColor="#ff333333"
            android:textSize="@dimen/qb_px_10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_10"
            android:layout_marginBottom="@dimen/qb_px_20"
            android:orientation="vertical"
            android:paddingLeft="@dimen/qb_px_25">

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本号：1.0.0"
                android:textColor="#ff333333"
                android:textSize="@dimen/qb_px_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服电话：400-6767-671"
                android:textColor="#ff333333"
                android:textSize="@dimen/qb_px_10" />

            <TextView
                android:id="@+id/dialog_about_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/poivacy_statement"
                android:textColor="#ff333333"
                android:textSize="@dimen/qb_px_10" />
        </LinearLayout>

    </LinearLayout>
    </FrameLayout>
</LinearLayout>